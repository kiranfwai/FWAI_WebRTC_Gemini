# STT-Only Service - Just transcribes what user says (no Gemini)

FROM python:3.11-slim

RUN apt-get update && apt-get install -y \
    ffmpeg \
    libopus-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

ENV PYTHONUNBUFFERED=1

RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    "websockets>=13.0.0" \
    "numpy>=1.24.0" \
    "aiohttp>=3.9.0" \
    python-dotenv==1.0.0

COPY stt-only-service.py .
COPY .env .

EXPOSE 8003

CMD ["python", "stt-only-service.py"]
