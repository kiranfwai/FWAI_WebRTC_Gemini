# Gemini Live Service
# Uses Pipecat for Gemini Live integration with context aggregators

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libopus-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies for Gemini Live service
# Using pipecat 0.0.97+ with google-genai extras for proper Gemini Live support
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    "pipecat-ai[google]>=0.0.97" \
    "websockets>=13.0.0" \
    python-dotenv==1.0.0

# Copy application code
COPY gemini-live-service.py .
COPY FAWI_Call_BOT.txt .
COPY .env .

# Expose port
EXPOSE 8003

# Run the Gemini Live service
CMD ["python", "gemini-live-service.py"]
