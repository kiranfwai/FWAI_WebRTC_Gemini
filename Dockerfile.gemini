# Gemini Live Service
# Uses Pipecat for Gemini Live integration with context aggregators

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libopus-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Ensure Python output is not buffered
ENV PYTHONUNBUFFERED=1

# Install Python dependencies for Gemini Live service
# Using google-genai for native Gemini Live audio streaming
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
    "google-genai>=1.0.0" \
    "websockets>=13.0.0" \
    "numpy>=1.24.0" \
    "scipy>=1.11.0" \
    "aiohttp>=3.9.0" \
    python-dotenv==1.0.0

# Copy application code
COPY gemini-live-service.py .
COPY FAWI_Call_BOT.txt .
COPY .env .

# Expose port
EXPOSE 8003

# Run the Gemini Live service
CMD ["python", "gemini-live-service.py"]
